+static inline int fd_set_blocked(int fd, int blocked)
+{
+	int flags = fcntl(fd, F_GETFL);
+
+	if (flags < 0) { return -1; }
+
+	if (blocked)
+		{ flags &= ~O_NONBLOCK; }
+	else
+		{ flags |= O_NONBLOCK; }
+
+	return fcntl(fd, F_SETFL, flags);
+}
